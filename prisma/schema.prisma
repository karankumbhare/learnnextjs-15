generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost{
  id String @id @default(uuid())
  title String
  content String
  imageURL String
  authorId String
  authorName String
  authorAvatar String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}